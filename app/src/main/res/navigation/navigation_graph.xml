<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/sellFragment"
        android:name="ke.co.ideagalore.olyxstore.ui.fragments.SellFragment"
        android:label="fragment_sell"
        tools:layout="@layout/fragment_sell" >
        <action
            android:id="@+id/action_sellFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"/>
    </fragment>
    <fragment
        android:id="@+id/transactionsFragment"
        android:name="ke.co.ideagalore.olyxstore.ui.fragments.TransactionsFragment"
        android:label="fragment_transactions"
        tools:layout="@layout/fragment_transactions" >
        <action
            android:id="@+id/action_transactionsFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="ke.co.ideagalore.olyxstore.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_sellFragment"
            app:destination="@id/sellFragment"
            app:popUpTo="@id/sellFragment" />
        <action
            android:id="@+id/action_homeFragment_to_expenditureFragment"
            app:destination="@id/expenditureFragment"
            app:popUpTo="@id/expenditureFragment"/>
        <action
            android:id="@+id/action_homeFragment_to_creditFragment"
            app:destination="@id/creditFragment"
            app:popUpTo="@id/creditFragment"/>
        <action
            android:id="@+id/action_homeFragment_to_transactionsFragment"
            app:destination="@id/transactionsFragment"
            app:popUpTo="@id/transactionsFragment"/>
    </fragment>
    <fragment
        android:id="@+id/expenditureFragment"
        android:name="ke.co.ideagalore.olyxstore.ui.fragments.ExpenditureFragment"
        android:label="fragment_expenditure"
        tools:layout="@layout/fragment_expenditure" >
        <action
            android:id="@+id/action_expenditureFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"/>
    </fragment>
    <fragment
        android:id="@+id/creditFragment"
        android:name="ke.co.ideagalore.olyxstore.ui.fragments.CreditFragment"
        android:label="fragment_credit"
        tools:layout="@layout/fragment_credit" >
        <action
            android:id="@+id/action_creditFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"/>
    </fragment>

</navigation>