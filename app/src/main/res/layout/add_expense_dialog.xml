<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/transaction_dialog_bg"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato"
            android:text="New Expense"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />


        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminateDrawable="@drawable/progress"
            android:indeterminateOnly="true"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato"
        android:text="Expense"
        android:textColor="@color/text"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edt_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/refill_bg"
        android:hint="expense"
        android:inputType="textCapWords"
        android:textColorHint="@color/text"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato"
        android:text="Description"
        android:textColor="@color/text"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/refill_bg"
        android:hint="expense description"
        android:inputType="textCapSentences"
        android:textColorHint="@color/text"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato"
        android:text="Quantity"
        android:textColor="@color/text"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edt_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/refill_bg"
        android:hint="0"
        android:inputType="number"
        android:textColorHint="@color/text"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato"
        android:text="Total cost"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/refill_bg"
        android:hint="amount"
        android:inputType="number"
        android:textColorHint="@color/text"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lato"
            android:text="Cancel"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_add_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lato"
            android:padding="10dp"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/accentThree" />

    </RelativeLayout>

</LinearLayout>